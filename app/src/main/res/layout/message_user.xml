<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNameTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            tools:text="TextView" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="3dp"/>
    <TextView
            android:text="TextView this is a long text to check the behaviour of the message that the user lwill see in the palce of the @android:string/defaultMsisdnAlphaTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/max_message_width"
            android:id="@+id/messageTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameTextView"
            android:minWidth="@dimen/min_message_width"
            android:textColor="@color/white"
            android:background="@drawable/message_user" android:padding="@dimen/message_padding" android:textSize="16sp"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>